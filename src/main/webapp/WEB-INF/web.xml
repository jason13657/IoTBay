<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>IOT-BAY Web Application</display-name>

    <!-- ========== Admin / Management API (Only Staff Users) ========== -->
    <servlet>
        <servlet-name>ManageProduct</servlet-name>
        <servlet-class>controller.ManageProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageProduct</servlet-name>
        <url-pattern>/api/manage/products/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageUser</servlet-name>
        <servlet-class>controller.ManageUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageUser</servlet-name>
        <url-pattern>/api/manage/users/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageAccessLog</servlet-name>
        <servlet-class>controller.ManageAccessLogController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageAccessLog</servlet-name>
        <url-pattern>/api/manage/access-logs/*</url-pattern>
    </servlet-mapping>

    <!-- ========== Public Product Browsing API ========== -->
    <servlet>
        <servlet-name>BrowseProduct</servlet-name>
        <servlet-class>controller.BrowseProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BrowseProduct</servlet-name>
        <url-pattern>/api/products/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductDetails</servlet-name>
        <servlet-class>controller.ProductDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetails</servlet-name>
        <url-pattern>/api/products/*</url-pattern> <!-- /api/products/{id} -->
    </servlet-mapping>

    <!-- ========== User Authentication & Profile ========== -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/api/auth/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/api/auth/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>controller.ProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/api/users/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>controller.DeleteAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/api/users/delete</url-pattern> <!-- Better with DELETE -->
    </servlet-mapping>

    <!-- ========== Order API ========== -->
    <servlet>
        <servlet-name>Order</servlet-name>
        <servlet-class>controller.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Order</servlet-name>
        <url-pattern>/api/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderHistory</servlet-name>
        <servlet-class>controller.OrderHistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderHistory</servlet-name>
        <url-pattern>/api/orders/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderDetails</servlet-name>
        <servlet-class>controller.OrderDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderDetails</servlet-name>
        <url-pattern>/api/orders/*</url-pattern> <!-- /api/orders/{id} -->
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderCancel</servlet-name>
        <servlet-class>controller.OrderCancelController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderCancel</servlet-name>
        <url-pattern>/api/orders/cancel</url-pattern>
    </servlet-mapping>

    <!-- ========== Payment API ========== -->
    <servlet>
        <servlet-name>Payment</servlet-name>
        <servlet-class>controller.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Payment</servlet-name>
        <url-pattern>/api/payments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentHistory</servlet-name>
        <servlet-class>controller.PaymentHistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentHistory</servlet-name>
        <url-pattern>/api/payments/history</url-pattern>
    </servlet-mapping>

    <!-- ========== Error Handling ========== -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
</web-app>
