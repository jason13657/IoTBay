<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>IOT-BAY Web Application</display-name>
    
    <servlet>
        <servlet-name>ManageProduct</servlet-name>
        <servlet-class>controller.ManageProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageProduct</servlet-name>
        <url-pattern>/api/manage/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageUser</servlet-name>
        <servlet-class>controller.ManageUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageUser</servlet-name>
        <url-pattern>/api/manage/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageAccessLog</servlet-name>
        <servlet-class>controller.ManageAccessLogController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ManageAccessLog</servlet-name>
        <url-pattern>/api/manage/access-logs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BrowseProduct</servlet-name>
        <servlet-class>controller.BrowseProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BrowseProduct</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductDetails</servlet-name>
        <servlet-class>controller.ProductDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetails</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
<!-- =======================New Mappings from feature 1 , Access Manage==================== -->
    <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controller.LogoutController</servlet-class>
    </servlet>

    <servlet-mapping> 
    <!-- this will be used to map the logout servlet
    logout will be simple, remove the all the session attributes -->
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/api/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>controller.ProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/api/profile</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>DeleteRegistration</servlet-name>
      <servlet-class>controller.DeleteAccountController</servlet-class>
  </servlet>

  <servlet-mapping>
      <servlet-name>DeleteAccountController</servlet-name>
      <url-pattern>/api/user/deleteAccount</url-pattern>
  </servlet-mapping>

<!-- =======================New Mappings from feature 4 , Payment Manage==================== -->
    <servlet>
        <servlet-name>Payment</servlet-name>
        <servlet-class>controller.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Payment</servlet-name>
        <url-pattern>/api/payment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentHistory</servlet-name>
        <servlet-class>controller.PaymentHistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentHistory</servlet-name>
        <url-pattern>/api/payment/history</url-pattern>
    </servlet-mapping>


</web-app>